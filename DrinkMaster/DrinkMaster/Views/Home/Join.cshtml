@model IEnumerable<DrinkMaster.Models.DrinksModel>
@{
    ViewData["Title"] = "Join Game";
}

<div class="text-center">

    <h2>Join Game</h2>
    <br />
    <br />
    <head>
        <style>

            .btn-primary:hover {
                box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
            }
        </style>
    </head>

    <input placeholder="Player Name" />

    <br />
    <br />



    <p>
        <a asp-action="Create">Add New Drink</a>
    </p>
    <form asp-controller="DrinksModelsController" asp-action="Index">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DrinkName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AlcoholPercentage)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DrinkName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AlcoholPercentage)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>


    <a asp-action="Lobby"><input class="btn btn-primary" value="Join" /> </a>
</div>
@model IEnumerable<DrinkMaster.Models.GameStateModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPlayerCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxPlayerCount)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            @foreach (var playerItem in item.listOfPlayers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => playerItem.PlayerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => playerItem.TotalPoints)
                    </td>

                </tr>
            }
        }
    </tbody>
</table>

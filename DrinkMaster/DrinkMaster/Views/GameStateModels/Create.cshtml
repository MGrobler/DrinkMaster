@model DrinkMaster.Models.GameStateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Game</h1>

<br />

<head>
    <style>

        .btn-primary:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
        }
    </style>
</head>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameName" class="control-label"></label>
                <input asp-for="GameName" class="form-control" />
                <span asp-validation-for="GameName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="MaxPlayerCount" class="control-label"></label>
                <input asp-for="MaxPlayerCount" class="form-control" />
                <span asp-validation-for="MaxPlayerCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
